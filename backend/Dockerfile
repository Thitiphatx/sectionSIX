ARG PYTORCH="1.11.0"
ARG CUDA="11.3"
ARG CUDNN="8"
ARG MMCV="2.0.1"

FROM pytorch/pytorch:${PYTORCH}-cuda${CUDA}-cudnn${CUDNN}-devel

# Set the working directory in the container
WORKDIR /app

# Copy the code to the working directory
COPY . .

# Install dependencies
RUN pip install flask flask_cors flask-sqlalchemy psycopg2-binary watchdog prisma

# Expose port 5000 for the Flask app
EXPOSE 5000

# Use flask to run the app with debug enabled
CMD ["python3", "-m", "flask", "run", "--debug", "--host=0.0.0.0"]
